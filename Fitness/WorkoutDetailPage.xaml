<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitness.WorkoutDetailPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="HotPink" Padding="40,40,40,40">
            <WebView x:Name="WebView" HeightRequest="315" WidthRequest="560" HorizontalOptions="Center"/>
            <Label x:Name="Heading" TextColor="White" FontSize="Medium" FontAttributes="Bold" Text="unset" HorizontalTextAlignment="Center" />
            <Label x:Name="Descrition" TextColor="White" Text="unset" />
            <StackLayout>
                <Button x:Name="OKButton" Clicked="OKButton_Clicked" Text="OK" />
                <Button x:Name="AvailabilityButton" Clicked="AvailabilityButton_Clicked" Text="Check Availability" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>